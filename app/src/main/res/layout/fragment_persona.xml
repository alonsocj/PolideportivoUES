<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.persona.PersonaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/botonAgregarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AgregarPersonaFragment"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones" />

        <Button
            android:id="@+id/botonConsultarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ConsultarPersonaFragment"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones" />

        <Button
            android:id="@+id/botonActualizarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ActualizarPersonaFragment"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones" />

        <Button
            android:id="@+id/botonEliminarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/EliminarPersonaFragment"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones" />

    </LinearLayout>
</FrameLayout>