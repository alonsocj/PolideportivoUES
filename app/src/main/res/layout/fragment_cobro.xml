<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cobro.CobroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/botonAgregarCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_cobro_insertar" />

        <Button
            android:id="@+id/botonConsultarCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_cobro_consultar" />

        <Button
            android:id="@+id/botonActualizarCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_cobro_actualizar" />

        <Button
            android:id="@+id/botonEliminarCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_cobro_eliminar" />

    </LinearLayout>

</FrameLayout>