<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dia.DiaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/botonAgregarDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_dia_insertar" />

        <Button
            android:id="@+id/botonConsultarDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_dia_consultar" />

        <Button
            android:id="@+id/botonActualizarDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_dia_actualizar" />

        <Button
            android:id="@+id/botonEliminarDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botones"
            android:textColor="@color/black"
            android:text="@string/titulo_dia_eliminar" />

    </LinearLayout>

</FrameLayout>