<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".Chris.TipoPago.TipoPagoInsertarActivity">

    <TextView
        android:id="@+id/textView_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/titulo_tipoPago_insertar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

   <!-- <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TipoPagoIdentificador"
        android:textColor="@color/black"/> -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_EditIdPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_key"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/hintIdePago">
        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EditIdPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="2"/>
    </com.google.android.material.textfield.TextInputLayout>

  <!--  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TipoPagoNombreTipo"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/> -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_EditTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_money"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="15dp"
        android:hint="@string/hintTipoPago">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EditTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="20"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/botonAgregarTipoP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/black"
        android:backgroundTint="@color/botones"
        android:text="@string/botonAgregar"/>


</LinearLayout>