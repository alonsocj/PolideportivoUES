<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hora.HoraFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/botonAgregarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AgregarPersonaFragment" />

        <Button
            android:id="@+id/botonConsultarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ConsultarPersonaFragment" />

        <Button
            android:id="@+id/botonModificarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ActualizarPersonaFragment" />

        <Button
            android:id="@+id/botonEliminarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/EliminarPersonaFragment" />

    </LinearLayout>


</FrameLayout>