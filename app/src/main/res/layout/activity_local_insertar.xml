<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".William.Local.LocalInsertarActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/agregarLocal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="@string/idLocaltxt"/>

    <EditText
        android:id="@+id/EditIdLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintIdLocal"
        android:minHeight="48dp"
        android:maxLength="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="@string/nombreLocaltxt"/>

    <EditText
        android:id="@+id/EditNombreLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintnombreLocal"
        android:maxLength="50"
        android:minHeight="48dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cupoLocaltxt"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/SpinnerCupoLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/cupoLocal"
        android:minHeight="48dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">
    <Button
        android:id="@+id/botonAgregarLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="insertarLocal"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/botones"
        android:text="@string/botonAgregar"/>

        <Button
            android:id="@+id/botonLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/btnLimpiar"
            android:onClick="limpiar"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>