<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HorariosLocales.HorariosLocalesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/botonAgregarDetallePeriodosRF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones"
            android:text="@string/agregarHorariosLocales"
            />

        <Button
            android:id="@+id/botonConsultarDetallePeriodosRF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones"
            android:text="@string/consultarHorariosLocales"
            />

        <Button
            android:id="@+id/botonActualizarDetallePeriodosRF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones"
            android:text="@string/actualizarHorariosLocales"
            />

        <Button
            android:id="@+id/botonEliminarDetallePeriodosRF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones"
            android:text="@string/eliminarHorariosLocales"
            />

    </LinearLayout>
</FrameLayout>