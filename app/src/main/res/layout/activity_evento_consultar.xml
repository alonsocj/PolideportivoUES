<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".Chris.Evento.EventoConsultarActivity">

    <TextView
        android:id="@+id/textView_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/titulo_evento_consultar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NumEvenTxt"
        android:textColor="@color/black"/> -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Input_EditIdNumeroEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_key"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/NumeroEventoHint">
        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EditIdNumeroEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="6"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <Button
            android:id="@+id/botonConsultarEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/botonConsultar"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones"/>

        <Button
            android:id="@+id/botonLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/botones"
            android:text="@string/btnLimpiar"/>
    </LinearLayout>

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TiEventTxt"
        android:textColor="@color/black"/> -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Input_EditTipoEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/TiEventTxt"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_tipo_evento"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:enabled="false">
        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EditTipoEventoConsulta"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NomEventTxt"
        android:textColor="@color/black"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Input_EditNombreEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_evento"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/NomEventTxt"
        android:enabled="false">
        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EditNombreEventoConsulta"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/costoEventTxt"
        android:textColor="@color/black"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Input_EditCostoEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_money"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/costoEventTxt"
        android:enabled="false">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EditCostoEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cantAutEventTxt"
        android:textColor="@color/black"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Input_EditCantAutorEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_cantidad"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="@string/cantAutEventTxt"
        android:enabled="false">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/EditCantAutorEventoConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
</ScrollView>
